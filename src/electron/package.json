{
  "name": "meloamp",
  "version": "1.1.0",
  "main": "main.js",
  "files": [
    "main.js",
    "preload.js",
    "build/**/*",
    "package.json"
  ],
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "Melodee Team <info@melodee.org>",
  "homepage": "https://melodee.org",
  "license": "ISC",
  "description": "MeloAmp: Cross-platform streaming client for the Melodee.",
  "devDependencies": {
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "electron-updater": "^6.6.2",
    "express": "^5.1.0",
    "got": "^11.8.6",
    "mpris-service": "^2.1.2"
  },
  "overrides": {
    "xml2js": "^0.6.2"
  },
  "build": {
    "productName": "MeloAmp",
    "executableName": "MeloAmp",
    "appId": "org.melodee.meloamp",
    "artifactName": "${name}-${version}.${ext}",
    "asar": true,
    "compression": "normal",
    "generateUpdatesFilesForAllChannels": false,
    "publish": {
      "provider": "github",
      "owner": "melodee",
      "repo": "meloamp",
      "releaseType": "release"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "tar.gz",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Audio",
      "icon": "resources/logo.png",
      "executableName": "MeloAmp"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        },
        {
          "target": "zip",
          "arch": ["x64"]
        }
      ],
      "icon": "resources/logo.png"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "public.app-category.music",
      "icon": "resources/logo.png"
    },
    "directories": {
      "output": "dist",
      "buildResources": "resources",
      "app": "."
    },
    "extraResources": [
      {
        "from": "build",
        "to": "build"
      },
      {
        "from": "resources/logo.png",
        "to": "resources/logo.png"
      }
    ]
  }
}
